<div class="home">
  <h1 class="home-title">Academy Library</h1>
  <h2 class="collection-title">Collection of Books</h2>
  <div class="book-grid-container">
    <% books.forEach(book => { %>
    <div class="book-grid-item">
      <a href="/book/<%= book.isbn %>" class="book-link">
        <img src="<%= book.imageUrl %>" style="width: auto; height: 500px" />
        <h3 style="width: 400px"><%= book.title %></h3>
        <p><%= book.author %></p>
      </a>
    </div>
    <% }) %>
  </div>
  <a href="/catalog" class="btn btn--animated view-all-btn">View All</a>
</div>
